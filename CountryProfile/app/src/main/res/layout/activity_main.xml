<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <AnalogClock

        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <Button
        android:id="@+id/bangladeshid"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#BD3509"
        android:drawableLeft="@drawable/bangladesh"
        android:padding="10dp"
        android:text="Bangladesh"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/indiaid"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#BD3509"
        android:drawableLeft="@drawable/india"
        android:padding="10dp"
        android:text="India"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/pakistanid"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#BD3509"
        android:drawableLeft="@drawable/pakistan"
        android:padding="10dp"
        android:text="Pakistan"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />


</LinearLayout>