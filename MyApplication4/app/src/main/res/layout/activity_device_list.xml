<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myapplication4.DeviceListActivity">

    <ProgressBar
        android:id="@+id/progress_scan_devices"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#C089F7"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="15dp"
        android:text="@string/str_paired_devices" />

    <ListView
        android:id="@+id/list_paired_devices"
        android:layout_width="match_parent"
        android:background="#E1C3EC"
        android:divider="#FFFFFF"
        android:dividerHeight="5dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:listSelector="#CBA2F4"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#C089F7"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:layout_marginLeft="10dp"
        android:text="@string/str_available_devices" />

    <ListView
        android:layout_marginRight="10dp"
        android:listSelector="#CBA2F4"
        android:id="@+id/list_available_devices"
        android:layout_width="match_parent"
        android:divider="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:dividerHeight="5dp"
        android:background="#E1C3EC"
        android:layout_height="wrap_content" />
</LinearLayout>
