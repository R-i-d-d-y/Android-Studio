<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".profile_edit">

    <TextView
        android:id="@+id/editProfileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Edit Your Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:text="Display Picture"
        android:textSize="16sp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/shozib"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="230dp"
        android:text="Browse"
        android:background="@drawable/button_bg_violet"
        android:textColor="@color/white"
        android:textAllCaps="false" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">
        <TableRow>
            <TextView
                android:id="@+id/fullname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Full Name"
                android:width="100dp"/>
            <EditText
                android:id="@+id/fullnamebox"
                android:layout_marginTop="10dp"
                android:width="230dp"
                android:height="30dp"
                android:hint="Enter Full Name"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:background="@drawable/input_text_bg"/>
        </TableRow>
        <TableRow
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/displayname"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Display Name"
                android:width="100dp"/>
            <EditText
                android:id="@+id/displaynamebox"
                android:layout_marginTop="10dp"
                android:width="230dp"
                android:height="30dp"
                android:hint="Enter Display Name"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:background="@drawable/input_text_bg"/>
        </TableRow>
        <TableRow
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/devicename"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:text="Device Name"
                android:width="100dp"/>
            <EditText
                android:id="@+id/devicenamebox"
                android:layout_marginTop="10dp"
                android:width="230dp"
                android:height="30dp"
                android:paddingLeft="10dp"
                android:hint="Enter Device Name"
                android:textSize="14sp"
                android:background="@drawable/input_text_bg"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="70dp">

        <TableRow
            android:layout_width="254dp"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/cancell"
                android:width="100dp"
                android:background="@drawable/button_bg"
                android:capitalize="sentences"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/save"
                android:layout_marginLeft="30dp"
                android:width="100dp"
                android:background="@drawable/button_bg_black"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:textSize="16sp" />
        </TableRow>
    </TableLayout>
</RelativeLayout>